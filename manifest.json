{
    "manifest_version": 3,
    "name": "Slooh Tweaks Beta",
    "description": "Allows for more utility and customization of Slooh.",
    "version": "0.43",
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "content_scripts": [{
        "matches": ["https://app.slooh.com/*"],
        "js":["settings.js","tweaks.js"],
        "css": ["timer.css"]
    }],
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage"
    ]
}